set -eu

CWD=$(pwd)

SRCNAM=mutt
PRGNAM=mutt-sidebar
VERSION=${VERSION:-1.6.0}
BUILD=${BUILD:-1}
TAG=${TAG:-cf}
TMP=${TMP:-/tmp/pkg}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

if [ -z ${ARCH:=""} ]; then
  case "$( uname -m )" in
  i?86) ARCH=i686 ;;
  arm*) ARCH=arm ;;
  *) ARCH=$( uname -m ) ;;
  esac
fi

if [ "$ARCH" = "i586" ]; then
  SLKCFLAGS="-O2 -march=i586 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "i686" ]; then
  SLKCFLAGS="-O2 -march=i686 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "x86_64" ]; then
  SLKCFLAGS="-O2 -fPIC -fomit-frame-pointer"
  LIBDIRSUFFIX="64"
else
  SLKCFLAGS="-O2"
  LIBDIRSUFFIX=""
fi

rm -rf $PKG
mkdir -p $TMP $PKG
cd $TMP
rm -rf $SRCNAM-$VERSION
tar xzvf $CWD/$SRCNAM-$VERSION.tar.gz
cd $SRCNAM-$VERSION

chown -R root:root .
chmod -R u+w,go+r-w,a+X-s .

# patch by Lunar Linux to add sidebar support and other patches by Debian and Arch
for PATCH in $CWD/patches/*.patch; do
  patch -p1 -i $PATCH
done

# Rename NAME to fix locales
sed "/AC_INIT/s/mutt/$PRGNAM/g" -i configure.ac

autoreconf -vfi
CFLAGS="$SLKCFLAGS" \
CXXFLAGS="$SLKCFLAGS" \
PACKAGE_NAME="$PRGNAM" \
./configure \
  --prefix=/usr \
  --localstatedir=/var \
  --mandir=/usr/man \
  --infodir=/usr/info \
  --sysconfdir=/etc/$PRGNAM \
  --with-docdir=/usr/doc/$PRGNAM-$VERSION \
  --with-mailpath=/var/spool/mail \
  --with-ssl \
  --with-sasl \
  --with-idn \
  --enable-pop \
  --enable-smtp \
  --enable-imap \
  --enable-hcache \
  --enable-gpgme \
  --program-suffix=-sidebar \
  --host=$ARCH-slackware-linux \
  --build=$ARCH-slackware-linux

make
make DESTDIR=$PKG install

# Delete debug files
rm -f $PKG/usr/bin/{flea,muttbug}-sidebar

find $PKG | xargs file | grep -e "executable" -e "shared object" | grep ELF | cut -f 1 -d : | xargs -r strip --strip-unneeded 2> /dev/null || true
find $PKG | xargs file | grep "current ar archive" | cut -f 1 -d : | xargs -r strip -g 2> /dev/null || true

# Rename conf files
mv $PKG/etc/$PRGNAM/Muttrc $PKG/etc/$PRGNAM/Muttrc.new
mv $PKG/etc/$PRGNAM/mime.types $PKG/etc/$PRGNAM/mime.types.new

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

# Move man files (present in mutt standard package) in doc dir
mv $PKG/usr/man/ $PKG/usr/doc/$PRGNAM-$VERSION/

install -Dm644 $CWD/$PRGNAM.desktop $PKG/usr/share/applications/$PRGNAM.desktop
install -Dm644 $CWD/$PRGNAM.xpm $PKG/usr/share/pixmaps/$PRGNAM.xpm

mkdir -p $PKG/install 
cat $CWD/slack-desc > $PKG/install/slack-desc
cat $CWD/doinst.sh > $PKG/install/doinst.sh

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-txz}

