# Exit on most errors
set -e

# Set variables:
CWD=$(pwd)

PRGNAME=${PRGNAME:-clamav}
PKGNAME=${PKGNAME:-$PRGNAME}
VERSION=${VERSION:-0.97.6}
BUILD=${BUILD:-1}
TAG=${TAG:-cf}
TMP=${TMP:-/tmp/pkg}
PKG=$TMP/package-$PKGNAME
DOCS="$PKG/usr/doc/$PKGNAME-$VERSION"
# Two letter country code
# See http://www.iana.org/cctld/cctld-whois.htm for options
COUNTRY=${COUNTRY:-it}

# Insert document files in this variable
DOCFILES="AUTHORS BUGS COPYING* ChangeLog FAQ INSTALL NEWS README TODO UPGRADE docs/*.pdf docs/html examples"

# Automatically determine the architecture we are building on:
if [ -z "$ARCH" ]; then
    case "$( uname -m )" in
        i?86) ARCH=i686 ;;
        arm*) ARCH=arm ;;
        # Unless $ARCH is already set, use uname -m for all other archs:
        *) ARCH=$( uname -m ) ;;
    esac
fi

# Set compiling FLAGS
case "$ARCH" in
    i486)
	SLKCFLAGS="-O2 -march=i486 -mtune=i686"; CHOST="i486"
	SLKLDFLAGS=""; LIBDIRSUFFIX=""
        ;;
    i686)
	SLKCFLAGS="-O2 -march=i686 -pipe -fomit-frame-pointer"; CHOST="i486"
	SLKLDFLAGS=""; LIBDIRSUFFIX=""
        ;;
    x86_64)
	SLKCFLAGS="-O2 -fPIC -pipe -fomit-frame-pointer"; CHOST="x86_64"
	SLKLDFLAGS="-L/usr/lib64"; LIBDIRSUFFIX="64"
        ;;
    *)
        SLKCFLAGS="-O2"; CHOST=$ARCH
        SLKLDFLAGS=""; LIBDIRSUFFIX=""
	;;
esac

# Extract source and prepare:
rm -rf $PKG
mkdir -p $TMP $PKG
cd $TMP
rm -rf $PKGNAME-$VERSION
tar xvf $CWD/$PKGNAME-$VERSION.tar.gz
cd $PKGNAME-$VERSION

# We need the "clamav" user and group to exist at the time of
# configuring the software...
# Add the 'clamav' group if it doesn't already exist:
if ! grep -q "^clamav:" /etc/group; then
    /usr/sbin/groupadd -g 210 clamav 2> /dev/null
fi
# Add the 'clamav' user if it doesn't exist already:
if ! grep -q "^clamav:" /etc/passwd; then
    /usr/sbin/useradd -u 210 -c "ClamAV user" -d /dev/null -g clamav -s "/bin/false" clamav 2> /dev/null
fi

# Make sure ownerships and permissions are sane:
chown -R root:root .
chmod -R u+w,go+r-w,a-s .

# Patch the configuration files, thanks to Sbo
sed "s/db\.us\.clamav\.net/db\.${COUNTRY}\.clamav\.net/" $CWD/clamav.patch | patch -p1 --backup

# Configure
LDFLAGS="$SLKLDFLAGS" \
CFLAGS="$SLKCFLAGS" \
CXXFLAGS="$SLKCFLAGS" \
./configure \
  --prefix=/usr \
  --libdir=/usr/lib${LIBDIRSUFFIX} \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --mandir=/usr/man \
  --infodir=/usr/info \
  --with-user=clamav \
  --with-group=clamav \
  --with-dbdir=/var/lib/clamav \
  --enable-milter \
  --enable-id-check \
  --disable-static \
  --enable-clamdtop \
  --enable-experimental \
  --host=$CHOST-slackware-linux \
  --build=$CHOST-slackware-linux

# Build and install:
make
make DESTDIR=$PKG install

# Prepare the config files:
cd $PKG/etc
  mv clamd.conf clamd.conf.new
  mv freshclam.conf freshclam.conf.new
cd -

# Our rc script:
install -Dm755 $CWD/rc.clamav $PKG/etc/rc.d/rc.clamav.new
install -Dm644 $CWD/logrotate.clamav $PKG/etc/logrotate.d/clamav

# Fixup some ownership and permissions issues
chown -R root:root $PKG
chmod -R o-w $PKG
chown clamav $PKG/usr/sbin/clamav-milter
chmod 4700 $PKG/usr/sbin/clamav-milter
mkdir -p $PKG/var/lib/clamav
chmod 0770 $PKG/var/lib/clamav
touch $PKG/var/lib/clamav/{main,daily}.cvd
chmod 0660 $PKG/var/lib/clamav/*

# Create pid, socket and log directories
mkdir -p $PKG/var/{log,run}/clamav
chmod 771 $PKG/var/{log,run}/clamav

# Create log and db files in such a way that they won't clobber existing ones
touch $PKG/var/log/clamav/{clamd,freshclam}.log.new
chmod 660 $PKG/var/log/clamav/{clamd,freshclam}.log.new
chown -R clamav:clamav $PKG/var/{lib,log,run}/clamav

# Strip binaries:
find $PKG | xargs file | grep -e "executable" -e "shared object" | grep ELF | cut -f 1 -d : | xargs -r strip --strip-unneeded 2> /dev/null || true
find $PKG | xargs file | grep "current ar archive" | cut -f 1 -d : | xargs -r strip -g 2> /dev/null || true

# Compress and link manpages, if any:
if [ -d $PKG/usr/man ]; then
( cd $PKG/usr/man
  find . -type f -exec gzip -9 {} \;
  for i in $( find . -type l ) ; do ln -s $( readlink $i ).gz $i.gz ; rm $i ; done
)
fi

# Add a documentation directory:
mkdir -p ${DOCS}
for i in ${DOCFILES}; do
    if [ -e ${i} ]; then
        if ! [ -L ${i} ]; then
	    cp -a ${i} ${DOCS}
	else
	    cp -LRp ${i} ${DOCS}
        fi
    fi;
done
cat $CWD/readme.Slackware > $DOCS/README.Slackware

# Add a slackbuild script:
cat $CWD/$PKGNAME.SlackBuild > $DOCS/$PKGNAME.SlackBuild

# Add slack-desc
mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

# Add a doinst.sh
cat $CWD/doinst.sh > $PKG/install/doinst.sh

# Create package:
cd $PKG
/sbin/makepkg -l y -c n $CWD/$PKGNAME-$VERSION-$ARCH-${BUILD}${TAG}.txz

